@model IEnumerable<ClinicManagement.Core.Models.Attendance>
@{
    Layout = null;
}

<div class="col-md-12">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="x_title">Katılım</h4>
        </div>

        <div class="modal-body">

            <table class="data table table-striped no-margin dataTables">
                <thead>
                    <tr>
                        <th>Klinik Notlar</th>
                        <th>Teşhis</th>
                        <th>İkinci Tanı</th>
                        <th>Üçüncü Tanı</th>
                        <th>Terapi</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClinicRemarks</td>
                            <td>@item.Diagnosis</td>
                            <td>@item.SecondDiagnosis</td>
                            <td>@item.ThirdDiagnosis</td>
                            <td>@item.Therapy</td>
                            <td>@item.Date.ToString("MMM"), @item.Date.ToString("d ")-@item.Date.ToString("yyyy")</td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
        </div>

    </div>
</div>
