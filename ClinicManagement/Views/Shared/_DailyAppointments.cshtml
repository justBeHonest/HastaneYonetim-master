@model IEnumerable<ClinicManagement.Core.Models.Appointment>
@{
    
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class=" data table table-striped no-margin dataTable">
                    <thead>
                        <tr>
                            <th>Jeton</th>
                            <th>Hasta İsmi</th>
                            <th>Telefon</th>
                            <th>Tarih</th>
                            <th>Zaman</th>
                            <th>Doktor</th>
                            <th>Detay</th>
                            <th>Durum</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Patient.Token</td>
                                <td>@item.Patient.Name</td>
                                <td>@item.Patient.Phone</td>
                                <td>@item.StartDateTime.ToString("MMM")-@item.StartDateTime.ToString("d ")-@item.StartDateTime.ToString("yyyy")</td>
                                <td>@item.StartDateTime.ToString("HH:mm")</td>
                                <td>@item.Doctor.Name</td>
                                <td>@item.Detail</td>
                                <td>
                                    @{
                                    if (item.Status == true)
                                    {
                                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Onaylandı</a>
                                    }
                                    else
                                    {
                                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:greenyellow" class="badge" readonly>Bekliyor</a>
                                    }
                                }
                            </td>
                        </tr>
                                    }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.dataTable').DataTable({
            "scrollY": "300px",
            "scrollCollapse": true,
            "paging": false,
            "filter": false,
            "info": false,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
